// documentation: https://zed.dev/docs/configuring-zed
{
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "icon_theme": "Catppuccin Frappé",
  "language_models": {
    // "ollama": {
    //   "api_url": "http://192.168.0.17:11434"
    // }
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin_frappe": true,
    "dockerfile": true,
    "html": true,
    "lua": true,
    "nix": true,
    "sql": true,
    "templ": true
  },
  "show_edit_predictions": false,
  "languages": {
    "Go": {
      "show_edit_predictions": false
    },
    "Nix": {
      "tab_size": 2,
      "format_on_save": "off",
      "language_servers": ["nixd", "!nil"]
    }
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "line_indicator_format": "short",
  "scrollbar": { "show": "always" },
  "vertical_scroll_margin": 0,
  "theme": "Catppuccin Frappé - No Italics",
  "git": {
    "git_gutter": null,
    "gutter_debounce": null,
    "inline_blame": { "show_commit_summary": true }
  },
  "gutter": { "folds": false },
  "ui_font_fallbacks": ["JetBrainsMono Nerd Font Mono"],
  "ui_font_family": "Berkeley Mono",
  "ui_font_size": 16,
  "ui_font_features": {
    "zero": true
  },
  "hover_popover_enabled": false,
  "inlay_hints": {
    "enabled": true
  },
  "title_bar": { "show_user_picture": false },
  "preferred_line_length": 120,
  "soft_wrap": "bounded",
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false,
    "breadcrumbs": true
  },
  "use_auto_surround": false,
  "use_autoclose": false,
  "use_system_path_prompts": false,
  "max_tabs": 1,
  "tab_bar": { "show": false },
  "when_closing_with_no_tabs": "keep_window_open",
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font Mono"],
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_features": {
    "zero": true
  },
  "buffer_font_size": 15,
  "cursor_blink": false,
  "confirm_quit": true,
  "journal": { "hour_format": "hour24" },
  "show_whitespaces": "boundary",
  "tabs": { "file_icons": false },
  "telemetry": { "diagnostics": false, "metrics": false },
  "terminal": {
    "toolbar": { "breadcrumbs": false },
    "shell": { "program": "fish" }
  },
  "lsp": {
    "omnisharp": {
      "binary": {
        "path": "/Users/evgenii/Downloads/omnisharp-osx-arm64-net6.0/OmniSharp",
        "arguments": ["-lsp"]
      }
    }
  }
}
