// documentation: https://zed.dev/docs/configuring-zed
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "icon_theme": "Catppuccin Frappé",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2",
    "enable_experimental_live_diffs": true
  },
  "language_models": {
    // "ollama": {
    //   "api_url": "http://192.168.0.17:11434"
    // }
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin_frappe": true,
    "dockerfile": true,
    "html": true,
    "lua": true,
    "nix": true,
    "sql": true,
    "templ": true
  },
  "show_inline_completions": false,
  "languages": {
    "Go": {
      "show_inline_completions": false
    },
    "Nix": {
      "language_servers": ["nixd", "!nil"]
    },
    "Ruby": {
      "enable_language_server": false
    }
  },
  "show_copilot_suggestions": false,
  "vim_mode": true,
  "relative_line_numbers": true,
  "line_indicator_format": "short",
  "scrollbar": { "show": "always" },
  "vertical_scroll_margin": 0,
  "theme": "Catppuccin Frappé - No Italics",
  "git": {
    "git_gutter": null,
    "gutter_debounce": null,
    "inline_blame": { "show_commit_summary": true }
  },
  "gutter": { "folds": false },
  "ui_font_fallbacks": ["JetBrainsMono Nerd Font Mono"],
  "ui_font_family": "Berkeley Mono",
  "ui_font_size": 17,
  "ui_font_features": {
    "zero": true
  },
  "hover_popover_enabled": false,
  "inlay_hints": {
    "enabled": true
  },
  "show_user_picture": false,
  "preferred_line_length": 120,
  "soft_wrap": "bounded",
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false,
    "breadcrumbs": true
  },
  "use_auto_surround": false,
  "use_autoclose": false,
  "use_system_path_prompts": false,
  "tab_bar": { "show": false },
  "when_closing_with_no_tabs": "keep_window_open",
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font Mono"],
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_features": {
    "zero": true
  },
  "buffer_font_size": 17,
  "cursor_blink": false,
  "confirm_quit": true,
  "hour_format": "hour24",
  "show_whitespaces": "boundary",
  "tabs": { "file_icons": false },
  "telemetry": { "diagnostics": false, "metrics": false },
  "terminal": {
    "toolbar": { "breadcrumbs": false },
    "shell": { "program": "fish" }
  },
  "lsp": {
    "omnisharp": {
      "binary": {
        "path": "/Users/evgenii/Downloads/omnisharp-osx-arm64-net6.0/OmniSharp",
        "arguments": ["-lsp"]
      }
    }
  }
}
